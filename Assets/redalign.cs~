using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class redalign : MonoBehaviour {
    public Rigidbody2D rb;
    public Vector2 pos;
    private float screenh, screenw;
    private Vector2 posoffset;
    
    // Use this for initialization
    void Start () {
	Screen.orientation = ScreenOrientation.LandscapeLeft;
	rb = GetComponent<Rigidbody2D>();

	screenh = Camera.main.orthographicSize * 2;
	screenw = screenh * Screen.width/ Screen.height; // basically height
	RectTransform rt = (RectTransform) rb.transform;
	posoffset = new Vector2(-rt.rect.width/2, -rt.rect.height/2);
	
        pos = new Vector2(-screenw/2,0) + posoffset;
	transform.position = pos;
    }
	
    // Update is called once per frame
    void Update () {	
	//teleportRandom();
    }

    void teleportRandom() {
	if(Random.Range(-10,30) == 0){
	    transform.position = new Vector2(Random.Range(-screenw/2, screenw/2), Random.Range(-5f, 5f));
	}
    }
}
